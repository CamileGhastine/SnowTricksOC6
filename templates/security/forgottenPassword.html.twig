{% extends 'base.html.twig' %}
{% block title %} Mot de passe oubli√©{% endblock %}
{% block stylesheets %}<link rel="stylesheet" href="{{ asset("css/account_user.css") }}">{% endblock %}

{% block body %}

    <div class="container mt-5">
        <div class="media-trick my-5">
            <div class="mx-5 my-5">
                {% for message in app.flashes('danger') %}
                    <div class="alert alert-danger text-center">
                        {{ message }}
                    </div>
                {% endfor %}
                {% for message in app.flashes('success') %}
                    <div class="alert alert-success text-center mt-5">
                        {{ message }}
                    </div>
                {% else %}
                    {{ form_start(form) }}
                    <div class="row">
                        <div class="label col-12">
                            {{ form_label(form.email) }}
                        </div>
                        <div class="col-12 my-4">
                            {{ form_widget(form.email) }}
                        </div>
                    </div>

                    <button class="btn btn-secondary">Envoyer</button>
                    {{ form_end(form) }}


                {% endfor %}
            </div>
        </div>
    </div>

{% endblock %}

    {% block javascripts %}
        <script src="{{ asset('js/forgotten_password.js') }}"></script>
    {% endblock %}


