{% extends 'base.html.twig' %}
{% block title %}SnowTricks : Inscription{% endblock %}

{% block body %}

    <div class="container mt-5">

        <h1 class="mb-5">Connexion</h1>
        {% for message in app.flashes('success') %}
            <div class="alert alert-success">
                {{ message }}
            </div>
        {% endfor %}

        {% if error %}
            <Div class="alert alert-danger">
                Lidentifiant ou le mot de passe est incorrect.
            </Div>
        {% endif %}

        <form action="{{ path(('security_login')) }}" method="post">

            <div class="form-group row">
                <label for="username" class="col-sm-2 col-form-label">Nom d'utilisateur</label>
                <div class="col-sm-10">
                    <input type="text" class="form-control" id="username" name="_username" value="{{ lastUsername }}">
                </div>
            </div>
            <div class="form-group row">
                <label for="password" class="col-sm-2 col-form-label">Mot de passe</label>
                <div class="col-sm-10">
                    <input type="password" class="form-control" id="password" name="_password">
                </div>
            </div>

            <button type="submit" class="btn btn-secondary">Connexion</button>
        </form>

    </div>

{% endblock %}