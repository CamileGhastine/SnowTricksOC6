{% block stylesheets %}<link rel="stylesheet" href="{{ asset("css/account_user.css") }}">{% endblock %}

{% block body %}
    <div class="container">
        <div class="media-trick my-5">

            {% set flash = app.flashes %}
            {% if  flash %}
                {% for message in flash.danger %}
                    <div class="alert alert-danger text-center mx-5 my-5">
                        {{ message }}
                    </div>
                {% endfor %}
            {% else %}
                <h3 class="my-5 ml-5">Saisir votre nouveau mot de passe : </h3>
                <div class="mx-5">
                    {{ form_start(form) }}
                    {{ form_row(form.password) }}
                    {{ form_row(form.confirm_password) }}
                </div>
                <button class="btn btn-blue ml-5 mb-5">Valider</button>

                {{ form_end(form) }}
            {% endif %}

        </div>
    </div>
{% endblock %}



