{% extends 'base.html.twig' %}
{% block title %}SnowTricks : le site de tous les snowborders{% endblock %}
{% block stylesheets %}<link rel="stylesheet" href="{{ asset("css/home.css") }}">{% endblock %}

{% block body %}

    <header>

        <div class="jumbotron text-center">
            <h1 class="display-3">SnowTricks</h1>
            <h2 class="lead">Le site communautaire de tous les snowboarders</h2>
            {%  if is_granted('ROLE_USER') %}
                <p class="mt-5">
                    <a href="{{ path('trick_new') }}" class="btn btn-secondary mb-4">Ajouter une figure</a>
                </p>
            {% endif %}
            <div class="text-right" id="caret">
                <a href="#tricks"><i class="fas fa-angle-double-down fa-2x"></i></a>
            </div>
        </div>

    </header>

    <div class="container">

        {% for message in app.flashes('success') %}
            <div class="alert alert-success text-center">
                {{ message }}
            </div>
        {% endfor %}
        {% for message in app.flashes('danger') %}
            <div class="alert alert-danger text-center">
                {{ message }}
            </div>
        {% endfor %}

        <div class="mt-4 text-center mt-5 mb-4">
            <a href="{{ path('home') }}" class="">
                <span class="badge badge-pill badge-{{ categoryId is null ? 'primary' : 'secondary' }} mx-3 ">Tous les tricks</span>
            </a>
            {% for category in categories %}
                <a href="{{ path('trick_category', {'id' : category.id}) }}" class="">
                    <span class="badge badge-pill badge-{{ categoryId == category.id ? 'primary' : 'secondary' }} mx-3">{{ category.title }}</span>
                </a>
            {% endfor %}
        </div>

        <section class="row justify-content-center justify-content-sm-start" id="tricks">

            {%  for trick in tricks %}

                {% set poster = (trick.images | first) ? (trick.images | first).url : 'images/tricks/noImage.jpg' %}
                {% set alt = (trick.images | first) ? (trick.images | first).alt : 'no image' %}

                <article class="col-10 col-sm-6 col-md-4 col-lg-3 my-2">

                    <a href="{{ path('trick_show', {id: trick.id}) }}">
                        <img id="trick-img" src="{{ asset(poster) }}" alt="{{ alt }}">
                    </a>

                    <div class="row mx-1">

                        <div class="col-8 text-center">
                            <a href="{{ path('trick_show', {id: trick.id}) }}">
                                <h3 class="text-break">{{ trick.title }}</h3>
                            </a>
                        </div>

                        {%  if app.user %}
                            <div class="col-1 text-center">
                                <a href="{{ path('trick_edit', {id: trick.id}) }}">
                                    <i class="fas fa-pencil-alt"></i>
                                </a>
                            </div>
                            <div class="col-1 text-center">
                                <a type="button" href="#" data-toggle="modal" data-target="#deleteTrickModal-{{ trick.id }}">
                                    <i class="fas fa-trash-alt"></i>
                                </a>
                            </div>

                            <!-- Modal -->
                            <div class="modal fade" id="deleteTrickModal-{{ trick.id }}" tabindex="-1" role="dialog" aria-labelledby="deleteTrickModalLabel" aria-hidden="true">
                                <div class="modal-dialog" role="document">
                                    <div class="modal-content">
                                        <div class="modal-header">
                                            <h5 class="modal-title " id="deleteTrickModalLabel">{{ trick.title }}</h5>
                                        </div>
                                        <div class="modal-body">
                                            <p>Etes-vous sur de vouloir supprimer cette figure ?</p>
                                            <div class="row px-5">
                                                <img src="{{asset(poster) }}" alt="{{ alt }}">
                                            </div>
                                        </div>
                                        <div class="modal-footer">
                                            <button type="button" class="btn btn-secondary" data-dismiss="modal">Annuler</button>
                                            <form action="{{ path('trick_delete', {id: trick.id}) }}" method="post">
                                                <input type="hidden" name="_token" value="{{ csrf_token('delete'~trick.id) }}">
                                                <button type="submit" class="btn btn-danger">Supprimer</button>
                                            </form>
                                        </div>
                                    </div>
                                </div>
                            </div>

                        {% endif %}

                    </div>

                </article>

            {% endfor %}
            <div id="ajax-load-more">
            </div>
        </section>

        <div class="text-center my-5">
            <a href="{{ path('ajax_load_more') }}" id="button" class="btn btn-primary">Charger plus de figure</a>
        </div>

    </div>

    <div class="text-right" id="caret"><a href="#tricks"><i class="fas fa-angle-double-up fa-2x"></i></a></div>

    <script>

        // load More button
        var $page = 1;
        $(document).ready(function(){
            $("#button").click(function(e){
                e.preventDefault();
                var $url = this.href;
                $.post($url,
                    { 'page' : $page,
                        'id': '{{ categoryId }}'},
                    function ($data) {
                        $('#ajax-load-more').before($data);
                        $page = $page + 1;
                    }
                );
            });
        });
    </script>
{% endblock %}
