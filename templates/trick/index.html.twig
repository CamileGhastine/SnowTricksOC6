{% extends 'base.html.twig' %}
{% block title %}SnowTricks : le site de tous les snowborders{% endblock %}
{% block stylesheets %}<link rel="stylesheet" href="{{ asset("css/home.css") }}">{% endblock %}

{% block body %}

    <header>
        <div class="jumbotron text-center">
            <h1 class="display-3">SnowTricks</h1>
            <h2 class="lead">Le site communautaire de tous les snowboarders</h2>
            {%  if app.user %}
                <p class="mt-5"><a href="{{ path('trick_new') }}" class="btn btn-secondary mb-4">Ajouter une figure</a></p>
            {% endif %}
            <div class="text-right" id="caret"><a href="#tricks"><i class="fas fa-angle-double-down fa-2x"></i></a></div>
        </div>
    </header>

    <div class="container">

        {% for message in app.flashes('success') %}
            <div class="alert alert-success">
                {{ message }}
            </div>
        {% endfor %}

        <div class="mt-4 text-center mt-5 mb-4">
            {% for category in categories %}
                <a href="#" class=""><span class="badge badge-pill badge-secondary mx-3">{{ category.title }}</span></a>
            {% endfor %}
        </div>
        <section class="row justify-content-center justify-content-sm-start" id="tricks">
            {%  for trick in tricks | reverse %}
                <article class="col-10 col-sm-6 col-md-4 col-lg-3 my-2">
                    <a href="{{ path('trick_show', {id: trick.id}) }}"><img id="trick-img" src="{{ asset(trick.image) }}" alt="{{ trick.title }}"></a>
                    <div class="row mx-1">
                        <div class="col-8 text-center">
                            <a href="{{ path('trick_show', {id: trick.id}) }}"><h3 class="text-break">{{ trick.title }}</h3></a>
                        </div>
                        {%  if app.user %}
                            <div class="col-1 text-center">
                                <a href="{{ path('trick_edit', {id: trick.id}) }}"><i class="fas fa-pencil-alt"></i></a>
                            </div>
                            <div class="col-1 text-center">
                                <a href="{{ path('trick_delete', {id: trick.id}) }}"><i class="fas fa-trash-alt"></i></a>
                            </div>
                        {% endif %}
                    </div>
                </article>
            {% endfor %}
        </section>
        <div class="text-center my-5">
            <a href="#" class="btn btn-primary">Charger plus de figure</a>
        </div>
    </div>
    <div class="text-right" id="caret"><a href="#tricks"><i class="fas fa-angle-double-up fa-2x"></i></a></div>

{% endblock %}
