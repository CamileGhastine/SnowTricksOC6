{% extends 'base.html.twig' %}
{% block title %}SnowTricks : Modification d'une figure{% endblock %}
{% block stylesheets %}<link rel="stylesheet" href="{{ asset("css/trick_editForm.css") }}">{% endblock %}

{% block body %}
    <div class="container">

        {% set poster="" %}
        {% for image in trick.images %}
            {% if image.poster == 1 %}
                {% set poster = image  %}
            {% endif %}
        {% endfor %}


        <div class="card mb-5">
            <div class="card-header bg-dark text-white">
                {% if trick.images | length == 0 %}
                    <img src="{{ asset('images/tricks/noImage.jpg') }}" class="card-img col-6 offset-3 text-center mt-4" alt="no image">
                {% else %}
                    <img src="{{ asset(poster.url) }}" class="card-img col-6 offset-3 text-center mt-4" alt="{{ poster.alt }}">
                {% endif %}
                <div class="text-center">
                    {% if poster !="" %}
                        <div class="text-right">
                            <a href="#" data-toggle="modal" data-target="#changePosterModal">
                                <i class="fas fa-recycle"></i>
                            </a>
                            <a href="{{ path('image_delete', { 'id' : poster.id, 'csrf_token' : csrf_token('delete'~poster.id)}) }}">
                                <i class="fas fa-trash-alt"></i>
                            </a>
                        </div>
                    {% endif %}
                    <div class="card-img-overlay col-6">
                        <p class="card-title mt-5 text-break" id="title-img">{{ trick.title }}</p>
                    </div>
                </div>
            </div>
            <div class="card-body">

                {% for message in app.flashes('success') %}
                    <div class="alert alert-success" id="alert">
                        {{ message }}
                    </div>
                {% endfor %}
                <div class="row my-5">
                    <div class="col-8 d-flex " id="tricks-img">
                        <div class="row">

                            {% for image in trick.images %}
                                <div class="col-2">
                                    <a class="col-12 mb-3" href=""><img class="card-img" src="{{ asset(image.url) }}" alt="{{ image.alt }}"></a>
                                    {% if image.poster == 0 %}
                                        <a href="{{ path('image_poster_change', {'id' : image.id, 'posterId' : poster.id}) }}"><i class="far fa-images"></i></a>
                                    {% else %}
                                        <a href="#" data-toggle="modal" data-target="#changePosterModal">
                                            <i class="fas fa-recycle"></i>
                                        </a>
                                    {% endif %}
                                    <a href="{{ path('image_delete', { 'id' : image.id, 'csrf_token' : csrf_token('delete'~image.id)}) }}"><i class="fas fa-trash-alt"></i></a>
                                </div>
                            {% endfor %}
                        </div>
                    </div>

                    <!-- Modal -->
                    <div class="modal fade" id="changePosterModal" tabindex="-1" role="dialog" aria-labelledby="changePosterModalLabel" aria-hidden="true">
                        <div class="modal-dialog" role="document">
                            <div class="modal-content">
                                <div class="modal-header">
                                    <h5 class="modal-title " id="changePosterModalLabel">Choisissez la nouvelle image principale pour cette figure</h5>
                                </div>
                                <div class="modal-body">
                                    <div class="row">
                                        {% for image in trick.images %}
                                            <div class="col-3">
                                                <a href="{{ path('image_poster_change', {'id' : image.id, 'posterId' : poster.id}) }}">
                                                    <img class="img-modal" src="{{ asset(image.url) }}" alt="{{ image.alt }}">
                                                </a>
                                            </div>
                                        {% endfor %}
                                    </div>
                                </div>
                                <div class="modal-footer">
                                    <button type="button" class="btn btn-secondary" data-dismiss="modal">Annuler</button>

                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="col-4" id="tricks-video">
                        <div class="row">
                            {% for i in 1..2 %}
                                {#                                    <div class="col-6">#}
                                {#                                        <iframe class="col-12" src="https://www.youtube.com/embed/V9xuy-rVj9w" frameborder="0" allow="accelerometer; autoplay; encrypted-media; gyroscope; picture-in-picture" allowfullscreen></iframe>#}
                                {#                                        <a href="#"><i class="fas fa-trash-alt"></i></a>#}
                                {#                                    </div>#}

                            {% endfor %}
                        </div>
                    </div>
                </div>

                <div class="row my-5 text-center">
                    <div class="col-8">
                        <h5>Ajouter une photo</h5>
                        {{ form_start(formImage) }}
                        <a class="add-form mb-4" role="button"><i class="fas fa-plus-circle"></i></a>
                        {{ form_errors(formImage.file) }}
                        <div class="row formImageHidden justify-content-center">
                            <div class="col-4 text-left mt-3 mb-2">
                                {{ form_widget(formImage.file) }}
                            </div>
                            <div class="col-1 mt-4">
                                <button type="submit" class="icone-button"><i class="fas fa-download"></i></button>
                            </div>
                            <p class="col-12 font-weight-light">
                                <small>(Sélectionner un fichier et cliquer sur l'icone <i class="fas fa-download"></i> pour valider)</small>
                            </p>
                        </div>
                        {{ form_end(formImage) }}
                    </div>

                    <div class="col-4">
                        <h5>Ajouter une vidéo</h5>
                        {{ form_start(formVideo) }}
                        <a class="add-form mb-4" role="button"><i class="fas fa-plus-circle"></i></a>
                        {{ form_errors(formVideo.iframe) }}
                        <div class="row formImageHidden justify-content-center">
                            <div class="col-8 text-left mt-3 mb-2">
                                {{ form_widget(formVideo.iframe) }}
                            </div>
                            <div class="col-1 mt-4">
                                <button type="submit" class="icone-button"><i class="fas fa-download"></i></button>
                            </div>
                            <p class="col-12 font-weight-light">
                                <small>(Sélectionner un fichier et cliquer sur l'icone <i class="fas fa-download"></i> pour valider)</small>
                            </p>
                        </div>                        {{ form_widget(formVideo) }}
                    </div>
                    {{ form_end(formImage) }}
                </div>


                {{ form_start(formTrick) }}
                {{ form_row(formTrick.title) }}
                {{ form_row(formTrick.description) }}
                <div class="row">
                    <div class="col-8">
                        <div class="row">
                            <div class="col-3">
                                {{ form_label(formTrick.categories) }}
                            </div>
                            <div class="col-6">
                                {{ form_widget(formTrick.categories) }}
                            </div>
                        </div>
                    </div>
                    <div class="col-4">
                        <div class="text-center">
                            <h5>Ajouter une catégorie</h5>
                            <a href="#"><i class="fas fa-plus-circle"></i></a>
                        </div>
                    </div>
                </div>
                <div class="text-center">

                    <button type="submit" class="btn btn-secondary">Modifier la figure</button>
                    {{ form_end(formTrick) }}
                    <br/>
                    <button type="button" class="btn btn-danger" data-toggle="modal" data-target="#deleteTrickModal">
                        Supprimer la figure
                    </button>
                    <br/>
                    <a href="{{ path('trick_show', {'id' : trick.id}) }}" class="btn btn-secondary">Annuler</a>
                </div>


                <!-- Modal -->
                <div class="modal fade" id="deleteTrickModal" tabindex="-1" role="dialog" aria-labelledby="deleteTrickModalLabel" aria-hidden="true">
                    <div class="modal-dialog" role="document">
                        <div class="modal-content">
                            <div class="modal-header">
                                <h5 class="modal-title " id="deleteTrickModalLabel">{{ trick.title }}</h5>
                            </div>
                            <div class="modal-body">
                                <p>Etes-vous sur de vouloir supprimer cette figure ?</p>
                                <div class="row px-5">
                                    <img src="{{ poster=="" ? asset('/images/tricks/noImage.jpg') : asset(poster.url) }}" alt="">
                                </div>
                            </div>
                            <div class="modal-footer">
                                <button type="button" class="btn btn-secondary" data-dismiss="modal">Annuler</button>
                                <form action="{{ path('trick_delete', {id: trick.id}) }}" method="post">
                                    <input type="hidden" name="_token" value="{{ csrf_token('delete'~trick.id) }}">
                                    <button type="submit" class="btn btn-danger">Supprimer</button>
                                </form>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <script src="{{ asset('js/edit_trick_form.js') }}"></script>

{% endblock %}
