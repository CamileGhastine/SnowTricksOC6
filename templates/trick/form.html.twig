{% extends 'base.html.twig' %}
{% block title %}SnowTricks : Ajout d'une figure{% endblock %}
{% block stylesheets %}<link rel="stylesheet" href="{{ asset("css/trick_form.css") }}">{% endblock %}

{% block body %}
    <div class="container">

        {{ form_start(form) }}

        <div class="card mb-5">
            <div class="card-header bg-dark text-white">
                <img src="{{ trick.id ? asset(trick.image) : asset('images/add.jpg') }}" class="card-img col-6 offset-3 text-center mt-4" alt="{{ trick.title }}">
                <div class="text-center">
                    {% if trick.id %}
                        <div class="text-right">
                            <a href=""><i class="fas fa-recycle"></i></a>
                            <a href="#"><i class="fas fa-trash-alt"></i></a>
                        </div>
                    {% else %}
                    <div class="text-right">
                        <a href="#"><i class="fas fa-upload"></i></a>
                    </div>
                    {% endif %}
                    <div class="card-img-overlay col-6">
                        <p class="card-title mt-5 text-break" id="title-img">{{ trick.title }}</p>
                    </div>
                </div>
            </div>
            <div class="card-body text-center">

                {% if trick.id %}
                    <div class="row my-4">
                        <div class="col-6">
                            <a href="" class="btn btn-secondary">Ajouter une photo</a>
                        </div>
                        <div class="col-6">
                            <a href="" class="btn btn-secondary">Ajouter une vidéo</a>
                        </div>
                    </div>

                    <div class="row my-5">
                        <div class="col-6 d-flex " id="tricks-img">
                            <div class="row">
                                <div class="col-4">
                                    <a class=" mr-3" href=""><img class="card-img" src="{{ asset(trick.image) }}" alt="{{ trick.title }}"></a>
                                    <a href=""><i class="far fa-images"></i></a>
                                    <a href="#"><i class="fas fa-trash-alt"></i></a>
                                </div>

                                {% for i in 1..2 %}
                                    <div class="col-4">
                                        <a class="col-12 mb-3" href=""><img class="card-img" src="{{ asset(trick.image) }}" alt="{{ trick.title }}"></a>
                                        <a href=""><i class="far fa-images"></i></a>
                                        <a href="#"><i class="fas fa-trash-alt"></i></a>
                                    </div>
                                {% endfor %}
                            </div>

                        </div>

                        <div class="col-6" id="tricks-video">
                            <div class="row">
                                {% for i in 1..2 %}
                                    <div class="col-4">
                                        <iframe class="col-12" src="https://www.youtube.com/embed/V9xuy-rVj9w" frameborder="0" allow="accelerometer; autoplay; encrypted-media; gyroscope; picture-in-picture" allowfullscreen></iframe>
                                        <a href="#"><i class="fas fa-trash-alt"></i></a>
                                    </div>

                                {% endfor %}
                            </div>
                        </div>
                    </div>
                {% else %}
                    <p class="col-12">Une fois la nouvelle figure publiée, vous pourrez ajouter d'autres photos ou vidéos.</p>
                {% endif %}
                <p class="row">{{ form_row(form.title) }}</p>
                <p class="row">{{ form_row(form.description) }}</p>
                <p class="row">{{ form_row(form.categories) }}</p>

                <button type="submit" class="btn btn-secondary">{{ trick.id ? "Modifier l'article" : "Ajouter l'article" }}</button>
                {{ form_end(form) }}
            </div>
        </div>
    </div>
{% endblock %}
